<script>
const wpNumber = "917022406350";
const email = "uzirfan01@gmail.com";

function login(){
  const user = document.getElementById('username').value;
  const pass = document.getElementById('password').value;
  if(user && pass){
    alert('Login Successful!');
    document.getElementById('loginPage').style.display = 'none';
    document.getElementById('productPage').style.display = 'block';
  } else {
    alert('Please enter username and password.');
  }
}

function addToCart(){
  const color = document.getElementById('color').value;
  const size = document.getElementById('size').value;
  alert('Added to cart: Naruto T-Shirt - ' + color + ' - ' + size);
}

function showCODForm(){
  document.getElementById('codForm').style.display = 'block';
}

function submitCOD(){
  const name = document.getElementById('codName').value;
  const mail = document.getElementById('codEmail').value;
  const phone = document.getElementById('codPhone').value;
  const address = document.getElementById('codAddress').value;
  if(name && mail && phone && address){
    alert(`Order submitted!\nDetails sent to WhatsApp and Email.`);
    const product = `Naruto T-Shirt - ${document.getElementById('color').value} - ${document.getElementById('size').value}`;
    const msg = `New COD Order:\nName: ${name}\nEmail: ${mail}\nPhone: ${phone}\nAddress: ${address}\nProduct: ${product}`;
    window.open(`https://wa.me/${wpNumber}?text=${encodeURIComponent(msg)}`, "_blank");
    console.log(`Email to: ${email}\n${msg}`);
  } else {
    alert('Please fill all fields.');
  }
}

function openWhatsApp(){
  const product = `Naruto T-Shirt - ${document.getElementById('color').value} - ${document.getElementById('size').value}`;
  const msg = `I am interested in this product: ${product}`;
  window.open(`https://wa.me/${wpNumber}?text=${encodeURIComponent(msg)}`, "_blank");
}

// Dynamic offer line
function updateOffer(){
  const now = new Date();
  let deliveryDate = new Date();
  deliveryDate.setDate(now.getDate() + 5);
  const options = { day: 'numeric', month: 'short' };
  document.getElementById('offer').innerText = 
    `Order before 5:00 PM get 10% Off | Estimated delivery: ${deliveryDate.toLocaleDateString('en-US', options)}`;
}

updateOffer();
</script>
